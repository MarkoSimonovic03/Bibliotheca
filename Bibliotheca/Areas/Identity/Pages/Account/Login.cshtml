@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="underline-custom"></div>
<section>
    <div class="container p-5">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
                <form id="account" method="post" class="form-custom p-4 p-sm-5">
                    <h1>Log in to an existing account.</h1>
                    <div class="underline-custom mb-4"></div>

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="px-2 fs-4">Email</label>
                        <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="px-2 fs-4">Password</label>
                        <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                        </div>
                    </div>

                    <button id="login-submit" type="submit" class="btn-custom w-100">Log in</button>

                    <div class="text-center mt-4">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-primary">
                                Forgot your password?
                            </a>
                        </p>
                        <p class="mt-3">
                            Don't have an account?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-primary">
                                Register as a new user
                            </a>
                        </p>
                        <p class="mt-3">
                            Didn't receive a confirmation email?
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-primary">
                                Resend email confirmation
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
