@model Book
@{
	ViewData["Title"] = "Add a Book";
}
<div class="bg-create-overlay"></div>
<section>
	<div class="container p-5 text-white">
		<div class="row">
			<div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
				<h1 class="pb-4">Add a Book</h1>
				<form asp-action="Create" method="post" enctype="multipart/form-data" class="fs-5">
					<div class="form-group mb-4">
						<label asp-for="Title" class="form-label fs-4"></label>
						<input asp-for="Title" type="text" class="form-control" placeholder="Enter book title" required />
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>

					<div class="form-group mb-4">
						<label asp-for="Author" class="form-label fs-4"></label>
						<input asp-for="Author" type="text" class="form-control" placeholder="Enter author's name" required />
						<span asp-validation-for="Author" class="text-danger"></span>
					</div>

					<div class="form-group mb-4">
						<label asp-for="Summary" class="form-label fs-4"></label>
						<textarea asp-for="Summary" class="form-control" rows="4" maxlength="3000" placeholder="Enter book summary" required></textarea>
						<span asp-validation-for="Summary" class="text-danger"></span>
					</div>

					<div class="form-group mb-4">
						<label asp-for="Publisher" class="form-label fs-4"></label>
						<input asp-for="Publisher" type="text" class="form-control" placeholder="Enter publisher name" required />
						<span asp-validation-for="Publisher" class="text-danger"></span>
					</div>

					<div class="row">
						<div class="col-6">
							<div class="form-group mb-4">
								<label asp-for="YearOfPublication" class="form-label fs-4"></label>
								<input asp-for="YearOfPublication" type="number" min="1" max="@DateTime.Now.Year" class="form-control" required />
								<span asp-validation-for="YearOfPublication" class="text-danger"></span>
							</div>

							<div class="form-group mb-4">
								<label asp-for="NumberOfPages" class="form-label fs-4"></label>
								<input asp-for="NumberOfPages" type="number" min="1" max="5000" class="form-control" required />
								<span asp-validation-for="NumberOfPages" class="text-danger"></span>
							</div>
						</div>
						<div class="col-5 offset-1">
							<div class="form-group mb-4">
								<label asp-for="Categories" class="form-label fs-4"></label>
								@foreach (var category in Model.Categories)
								{
									<div class="form-check">
										<input class="form-check-input" type="checkbox" name="categories" value="@category.Id" id="category_@category.Id">
										<label class="form-check-label" for="category_@category.Id">
											@category.Name
										</label>
									</div>
								}
							</div>
						</div>

					</div>

					<div class="form-group mb-4">
						<label asp-for="AvailableQuantity" class="form-label fs-4"></label>
						<input asp-for="AvailableQuantity" type="number" min="1" max="5000" class="form-control" required />
						<span asp-validation-for="AvailableQuantity" class="text-danger"></span>
					</div>

					<div class="form-group mb-4">
						<label asp-for="ImageUrl" class="form-label fs-4">Upload Image</label>
						<input asp-for="ImageUrl" name="file" type="file" class="form-control" required />
						<span asp-validation-for="ImageUrl" class="text-danger"></span>
					</div>

					<button type="submit" class="btn-custom w-100">Submit</button>
				</form>
			</div>
		</div>
	</div>
</section>

<style>
	.bg-create-overlay {
		border-top:1px solid white;
	}
</style>